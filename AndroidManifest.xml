<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mydome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mydome.file.FileOperation"/>
        <activity android:name="com.example.mydome.message.MessageClassify"/>
        <activity android:name="com.example.mydome.windowsClassify.WindowsClassify"/>
        <activity android:name="com.example.mydome.handwriting.HandwritingActivity"/>
        <activity android:name="com.example.mydome.changeImage.ChangeUserIcon"/>
        <activity android:name="com.example.mydome.mediaPlayer.MediaClassify"/>
        <activity android:name="com.example.mydome.mediaPlayer.AudioWaveform"/>
        <activity android:name="com.example.mydome.listView.ListViewClassify"/>
        <activity android:name="com.example.mydome.listView.ExpandListItems"/>
        <activity android:name="com.example.mydome.animator.AnimatorClassify"/>
        <activity android:name="com.example.mydome.listView.DragListView"/>
        <activity android:name="com.example.mydome.listView.LetterSortListView"/>
        <activity android:name="com.example.mydome.IM.ChatActivity"
            	  android:windowSoftInputMode="stateUnchanged"/>
    </application>

</manifest>
