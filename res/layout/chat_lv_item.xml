<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:padding="7dp">
    <TextView 
        android:id="@+id/chat_lv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:text="@string/exit_account"/>
    <LinearLayout 
        android:id="@+id/chat_lv_item_ll_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_lv_item_time"
        android:orientation="horizontal">
        <ImageView 
        android:id="@+id/chat_lv_item_icon_head_from"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_expression"/>
    <TextView 
        android:id="@+id/chat_lv_item_text_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatfrom_bg_normal"
        android:textColor="@android:color/black"
        android:text="@string/abc_search_hint"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/chat_lv_item_ll_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_lv_item_time"
        android:gravity="right"
        android:orientation="horizontal">
        
    <TextView 
        android:id="@+id/chat_lv_item_text_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatto_bg_normal"
        android:textColor="@android:color/black"
        android:text="@string/abc_search_hint"/>
    <ImageView 
        android:id="@+id/chat_lv_item_icon_head_to"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_expression"/>
    </LinearLayout>
    
    

</RelativeLayout>
